{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2020": true,
        "mocha": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "plugins": [],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": [
            "error", 
            { 
              "argsIgnorePattern": "^_",
              "varsIgnorePattern": "^_"
            }
        ]
    },
    "overrides": [
        {
            "files": [
                "test/**/*.js",
                "test/**/*.jsx"
            ],
            "env": {
                "mocha": true
            }
        }
    ]
}
